cnopts = pysftp.CnOpts()
cnopts.hostkeys = None  


def trova_percorsi(path,diz):


    percorso = path.split('/')[:-1]
    for _x in range(len(percorso)):
        diz[str(path)].append("/".join(percorso[:_x+1])+"/")
        print(f"in {str(path)} ho aggiunto, {diz[str(path)]}")
    return diz


